<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.mikephil.charting.charts.PieChart
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pieChart"></com.github.mikephil.charting.charts.PieChart>

    <Button
        android:id="@+id/populateGameLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populate Game Log"
        app:layout_constraintBottom_toTopOf="@+id/deleteGameLogButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteGameLogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Game Log"
        app:layout_constraintBottom_toTopOf="@+id/populateOpponentProfileButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/populateOpponentProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populate Opponent Profile"
        app:layout_constraintBottom_toTopOf="@+id/deleteOpponentProfileButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteOpponentProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Opponent Profile"
        app:layout_constraintBottom_toTopOf="@+id/populateDeckProfileButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/populateDeckProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Populate Deck Profile"
        app:layout_constraintBottom_toTopOf="@+id/deleteDeckProfileButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/deleteDeckProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Deck Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>