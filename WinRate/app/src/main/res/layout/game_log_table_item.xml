<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_win_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="win"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/text_view_opponent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@id/text_view_win_status"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/text_view_win_status"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/text_view_opponent_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_opponent_name"
            android:maxLines="1"
            android:text="Opponent Deck"/>

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_opponent_name"
            android:layout_toEndOf="@+id/text_view_opponent_deck"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/text_view_opponent_deck"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:maxLines="1"
            android:text="Date"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>